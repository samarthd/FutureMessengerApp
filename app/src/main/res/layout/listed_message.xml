<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/message_content_label_tv"
        android:text="@string/message_content_label"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toTopOf="@id/message_content_tv"/>
    <TextView
        android:id="@+id/message_content_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@id/message_content_label_tv"/>
    <TextView
        android:id="@+id/recipients_label_tv"
        android:text="@string/recipients_label_plural"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@id/message_content_tv"/>
    <TextView
        android:id="@+id/recipients_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@id/recipients_label_tv"/>

    <TextView
        android:id="@+id/scheduled_time_label_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/scheduled_time_label"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/recipients_tv"/>

    <TextView
        android:id="@+id/scheduled_time_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@id/scheduled_time_label_tv"/>

</android.support.constraint.ConstraintLayout>