<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="horizontal"
    android:background="@drawable/listed_message_background">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:layout_gravity="center"
        android:background="@drawable/listed_message_icon_background"
        android:src="@drawable/text_icon" />

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        android:paddingStart="15dp">

        <TextView
            android:id="@+id/message_content_label_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/message_content_label"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/message_content_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/recipients_label_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/recipients_label_plural"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/recipients_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/scheduled_time_label_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/scheduled_time_label"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/scheduled_time_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

</LinearLayout>