<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/general_message_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="horizontal"
    android:clickable="true"
    android:background="@drawable/listed_message_background" >

    <ImageView
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:layout_gravity="center"
        android:background="@drawable/listed_message_icon_background"
        android:src="@drawable/text_icon" />

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="5dp"
        android:background="@drawable/listed_message_datetime_background">
        <TextView
            android:id="@+id/scheduled_day_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold|italic"
            android:textColor="@color/plain_white"/>
        <TextView
            android:id="@+id/scheduled_date_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold|italic"
            android:textColor="@color/plain_white"/>
        <TextView
            android:id="@+id/scheduled_time_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold|italic"
            android:textColor="@color/plain_white"/>
    </LinearLayout>


    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp">

        <TextView
            android:id="@+id/message_content_label_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/message_content_label"
            android:textStyle="bold|italic"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/message_content_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/recipients_label_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/recipients_label_singular"
            android:textStyle="bold|italic"
            android:textColor="@android:color/black"
            android:paddingTop="5dp"/>

        <TextView
            android:id="@+id/recipients_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black">
        </TextView>
    </LinearLayout>
</LinearLayout>