<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/dialog_background">

    <include layout="@layout/listed_message_details" />

    <!--Options layout that is made visible when a user clicks on a message.-->

    <android.support.v7.widget.LinearLayoutCompat
        android:id="@+id/options_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:gravity="center_horizontal">
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/edit_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_edit_white_24dp"
            android:text="@string/edit_message_option_label"
            android:textColor="@android:color/white"
            android:textStyle="bold|italic"
            android:background="@drawable/option_button_neutral_background"
            android:padding="10dp"
            android:layout_marginEnd="5dp"
            style="?android:attr/borderlessButtonStyle"/>
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/delete_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_delete_white_24dp"
            android:text="@string/delete_message_option_label"
            android:textColor="@android:color/white"
            android:textStyle="bold|italic"
            android:background="@drawable/option_button_warn_background"
            android:padding="10dp"
            android:layout_marginStart="5dp"
            style="?android:attr/borderlessButtonStyle" />
    </android.support.v7.widget.LinearLayoutCompat>
</android.support.v7.widget.LinearLayoutCompat>